  <script>
    let platformCount = 0;
    let highlightCount = 0;
    let chartsData = {};

    function switchTab(tab) {
      const manualTab = document.getElementById('manual-tab');
      const pasteTab = document.getElementById('paste-tab');
      const tabManualBtn = document.getElementById('tab-manual');
      const tabPasteBtn = document.getElementById('tab-paste');

      if (tab === 'manual') {
        manualTab.classList.remove('hidden');
        pasteTab.classList.add('hidden');
        tabManualBtn.classList.add('active-tab', 'border-white');
        tabPasteBtn.classList.remove('active-tab', 'border-white');
        tabManualBtn.classList.add('border-white');
        tabPasteBtn.classList.remove('border-white');
        tabManualBtn.classList.remove('text-white/60');
        tabPasteBtn.classList.add('text-white/60');
      } else {
        manualTab.classList.add('hidden');
        pasteTab.classList.remove('hidden');
        tabManualBtn.classList.remove('active-tab', 'border-white');
        tabPasteBtn.classList.add('active-tab', 'border-white');
        tabManualBtn.classList.remove('border-white');
        tabPasteBtn.classList.add('border-white');
        tabManualBtn.classList.add('text-white/60');
        tabPasteBtn.classList.remove('text-white/60');
      }
    }

    function showLanding() {
      document.getElementById('landing-view').classList.remove('hidden');
      document.getElementById('create-view').classList.add('hidden');
      document.getElementById('report-view').classList.add('hidden');
    }

    function showCreateForm() {
      document.getElementById('landing-view').classList.add('hidden');
      document.getElementById('create-view').classList.remove('hidden');
      document.getElementById('report-view').classList.add('hidden');
      
      if (platformCount === 0) {
        addPlatform();
      }
      if (highlightCount === 0) {
        addHighlight();
      }
    }

    function showReport() {
      document.getElementById('landing-view').classList.add('hidden');
      document.getElementById('create-view').classList.add('hidden');
      document.getElementById('report-view').classList.remove('hidden');
    }

    function addPlatform() {
      platformCount++;
      const container = document.getElementById('platforms-container');
      const platformId = `platform-${platformCount}`;
      
      const platformHTML = `
        <div id="${platformId}" class="glass-card rounded-lg p-6 border-white/10">
          <div class="flex items-center justify-between mb-4">
            <input type="text" class="platform-name glass-input px-4 py-2 rounded-lg text-white font-semibold flex-1 mr-3" placeholder="Platform Name (e.g., Facebook Ads)">
            <button onclick="removePlatform('${platformId}')" class="text-white/60 hover:text-red-400 transition">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </button>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div>
              <label class="block text-xs text-white/60 mb-2 font-semibold">Results</label>
              <input type="number" class="metric-results glass-input w-full px-3 py-2 rounded-lg text-white" placeholder="0" value="0">
            </div>
            <div>
              <label class="block text-xs text-white/60 mb-2 font-semibold">Impressions</label>
              <input type="number" class="metric-impressions glass-input w-full px-3 py-2 rounded-lg text-white" placeholder="0" value="0">
            </div>
            <div>
              <label class="block text-xs text-white/60 mb-2 font-semibold">Clicks</label>
              <input type="number" class="metric-clicks glass-input w-full px-3 py-2 rounded-lg text-white" placeholder="0" value="0">
            </div>
            <div>
              <label class="block text-xs text-white/60 mb-2 font-semibold">Cost (‚Çπ)</label>
              <input type="number" class="metric-cost glass-input w-full px-3 py-2 rounded-lg text-white" placeholder="0" value="0">
            </div>
          </div>
        </div>
      `;
      
      container.insertAdjacentHTML('beforeend', platformHTML);
    }

    function removePlatform(id) {
      const element = document.getElementById(id);
      if (element) element.remove();
    }

    function addHighlight() {
      highlightCount++;
      const container = document.getElementById('highlights-container');
      const highlightId = `highlight-${highlightCount}`;
      
      const highlightHTML = `
        <div id="${highlightId}" class="flex items-center gap-3">
          <div class="w-3 h-3 rounded-full bg-purple-400 flex-shrink-0 mt-1"></div>
          <input type="text" class="highlight-text glass-input flex-1 px-4 py-2 rounded-lg text-white placeholder-white/40" placeholder="Enter a key highlight or insight...">
          <button onclick="removeHighlight('${highlightId}')" class="text-white/60 hover:text-red-400 transition flex-shrink-0">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      `;
      
      container.insertAdjacentHTML('beforeend', highlightHTML);
    }

    function removeHighlight(id) {
      const element = document.getElementById(id);
      if (element) element.remove();
    }

    function parsePasteData() {
      const data = document.getElementById('paste-data').value.trim();
      if (!data) return;
      
      const lines = data.split('\n').filter(line => line.trim());
      const container = document.getElementById('platforms-container');
      
      container.innerHTML = '';
      platformCount = 0;
      
      lines.forEach((line, idx) => {
        if (idx === 0) return; // Skip header if present
        const parts = line.split(/[\t\s]+/).filter(p => p);
        if (parts.length >= 5) {
          addPlatform();
          const lastPlatform = container.lastElementChild;
          lastPlatform.querySelector('.platform-name').value = parts[0];
          lastPlatform.querySelector('.metric-results').value = parts[1] || '0';
          lastPlatform.querySelector('.metric-impressions').value = parts[2] || '0';
          lastPlatform.querySelector('.metric-clicks').value = parts[3] || '0';
          lastPlatform.querySelector('.metric-cost').value = parts[4] || '0';
        }
      });
      
      switchTab('manual');
    }

    function formatNumber(num) {
      const n = Number(num);
      if (n >= 1000000) return (n / 1000000).toFixed(1) + 'M';
      if (n >= 1000) return (n / 1000).toFixed(1) + 'K';
      return n.toLocaleString();
    }

    function generateReport() {
      const brandName = document.getElementById('brand-name').value || 'Your Brand';
      const presenterName = document.getElementById('presenter-name').value || 'N/A';
      const reportingPeriod = document.getElementById('reporting-period').value || 'Current Period';
      
      const platforms = [];
      let totalResults = 0, totalImpressions = 0, totalClicks = 0, totalCost = 0;
      
      document.querySelectorAll('[id^="platform-"]').forEach(el => {
        const name = el.querySelector('.platform-name').value || 'Unnamed';
        const results = parseFloat(el.querySelector('.metric-results').value) || 0;
        const impressions = parseFloat(el.querySelector('.metric-impressions').value) || 0;
        const clicks = parseFloat(el.querySelector('.metric-clicks').value) || 0;
        const cost = parseFloat(el.querySelector('.metric-cost').value) || 0;
        
        totalResults += results;
        totalImpressions += impressions;
        totalClicks += clicks;
        totalCost += cost;
        
        platforms.push({ name, results, impressions, clicks, cost });
      });
      
      const highlights = [];
      document.querySelectorAll('.highlight-text').forEach(el => {
        if (el.value.trim()) highlights.push(el.value.trim());
      });
      
      const ctr = totalImpressions > 0 ? ((totalClicks / totalImpressions) * 100).toFixed(2) : '0.00';
      const cpc = totalClicks > 0 ? (totalCost / totalClicks).toFixed(2) : '0.00';
      const cpr = totalResults > 0 ? (totalCost / totalResults).toFixed(2) : '0.00';
      const resultRate = totalImpressions > 0 ? ((totalResults / totalImpressions) * 100).toFixed(2) : '0.00';
      
      chartsData = { platforms, totalResults, totalImpressions, totalClicks, totalCost };
      
      const reportHTML = `
        <div class="p-8 max-w-7xl mx-auto">
          <!-- Header Section -->
          <div class="bg-white rounded-2xl shadow-lg p-8 mb-8 border-l-4 border-purple-500">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              <div>
                <p class="text-slate-500 text-sm font-semibold mb-1">Brand</p>
                <h2 class="heading-font text-3xl font-bold text-slate-900">${brandName}</h2>
              </div>
              <div>
                <p class="text-slate-500 text-sm font-semibold mb-1">Presenter</p>
                <p class="text-xl font-semibold text-slate-800">${presenterName}</p>
              </div>
              <div>
                <p class="text-slate-500 text-sm font-semibold mb-1">Reporting Period</p>
                <p class="text-xl font-semibold text-slate-800">${reportingPeriod}</p>
              </div>
            </div>
          </div>
          
          <!-- Key Metrics Section -->
          <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
            <div class="stat-card p-6">
              <p class="text-slate-500 text-sm font-semibold mb-2">Results</p>
              <p class="heading-font text-3xl font-bold text-purple-600">${formatNumber(totalResults)}</p>
            </div>
            <div class="stat-card p-6">
              <p class="text-slate-500 text-sm font-semibold mb-2">Impressions</p>
              <p class="heading-font text-3xl font-bold text-purple-600">${formatNumber(totalImpressions)}</p>
            </div>
            <div class="stat-card p-6">
              <p class="text-slate-500 text-sm font-semibold mb-2">Clicks</p>
              <p class="heading-font text-3xl font-bold text-purple-600">${formatNumber(totalClicks)}</p>
            </div>
            <div class="stat-card p-6">
              <p class="text-slate-500 text-sm font-semibold mb-2">Total Spend</p>
              <p class="heading-font text-3xl font-bold text-purple-600">‚Çπ${formatNumber(totalCost)}</p>
            </div>
            <div class="stat-card p-6">
              <p class="text-slate-500 text-sm font-semibold mb-2">CTR</p>
              <p class="heading-font text-3xl font-bold text-purple-600">${ctr}%</p>
            </div>
          </div>
          
          <!-- Charts Section -->
          <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
            <h3 class="heading-font text-2xl font-bold text-slate-900 mb-8">Platform Performance Distribution</h3>
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
              <!-- Large Results Chart -->
              <div class="lg:col-span-2">
                <div class="bg-white border border-slate-200 rounded-xl p-6 h-96">
                  <canvas id="resultsChart"></canvas>
                </div>
                <div class="chart-label mt-4 text-lg">
                  <span class="font-bold text-purple-600">Platform-wise Results Distribution</span><br>
                  <span class="text-slate-600">Total: ${formatNumber(totalResults)}</span>
                </div>
              </div>
              
              <!-- Right Column Charts -->
              <div class="space-y-6">
                <!-- Cost Chart -->
                <div>
                  <div class="bg-white border border-slate-200 rounded-xl p-6 h-80">
                    <canvas id="costChart"></canvas>
                  </div>
                  <div class="chart-label mt-3">
                    <span class="font-bold text-purple-600">Platform-wise Cost</span><br>
                    <span class="text-slate-600 text-sm">Total: ‚Çπ${formatNumber(totalCost)}</span>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Second Row of Charts -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
              <!-- Impressions Chart -->
              <div>
                <div class="bg-white border border-slate-200 rounded-xl p-6 h-80">
                  <canvas id="impressionsChart"></canvas>
                </div>
                <div class="chart-label mt-3">
                  <span class="font-bold text-purple-600">Platform-wise Impressions</span><br>
                  <span class="text-slate-600 text-sm">Total: ${formatNumber(totalImpressions)}</span>
                </div>
              </div>
              
              <!-- Clicks Chart -->
              <div>
                <div class="bg-white border border-slate-200 rounded-xl p-6 h-80">
                  <canvas id="clicksChart"></canvas>
                </div>
                <div class="chart-label mt-3">
                  <span class="font-bold text-purple-600">Platform-wise Clicks</span><br>
                  <span class="text-slate-600 text-sm">Total: ${formatNumber(totalClicks)}</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Data Table Section -->
          <div class="bg-white rounded-2xl shadow-lg p-8 mb-8 overflow-x-auto">
            <h3 class="heading-font text-2xl font-bold text-slate-900 mb-6">Detailed Performance Data</h3>
            <table class="data-table">
              <thead>
                <tr>
                  <th>Platform</th>
                  <th>Results</th>
                  <th>Impressions</th>
                  <th>Clicks</th>
                  <th>Cost (‚Çπ)</th>
                  <th>CPR</th>
                  <th>Result Rate</th>
                  <th>CTR</th>
                  <th>CPC</th>
                </tr>
              </thead>
              <tbody>
                ${platforms.map(p => {
                  const pCTR = p.impressions > 0 ? ((p.clicks / p.impressions) * 100).toFixed(2) : '0.00';
                  const pCPC = p.clicks > 0 ? (p.cost / p.clicks).toFixed(2) : '0.00';
                  const pCPR = p.results > 0 ? (p.cost / p.results).toFixed(2) : '0.00';
                  const pResultRate = p.impressions > 0 ? ((p.results / p.impressions) * 100).toFixed(2) : '0.00';
                  return `
                    <tr>
                      <td class="font-semibold text-purple-600">${p.name}</td>
                      <td>${formatNumber(p.results)}</td>
                      <td>${formatNumber(p.impressions)}</td>
                      <td>${formatNumber(p.clicks)}</td>
                      <td>‚Çπ${formatNumber(p.cost)}</td>
                      <td>‚Çπ${pCPR}</td>
                      <td>${pResultRate}%</td>
                      <td>${pCTR}%</td>
                      <td>‚Çπ${pCPC}</td>
                    </tr>
                  `;
                }).join('')}
                <tr style="background: #f8fafc; font-weight: bold;">
                  <td>TOTAL</td>
                  <td>${formatNumber(totalResults)}</td>
                  <td>${formatNumber(totalImpressions)}</td>
                  <td>${formatNumber(totalClicks)}</td>
                  <td>‚Çπ${formatNumber(totalCost)}</td>
                  <td>‚Çπ${cpr}</td>
                  <td>${resultRate}%</td>
                  <td>${ctr}%</td>
                  <td>‚Çπ${cpc}</td>
                </tr>
              </tbody>
            </table>
          </div>
          
          <!-- Key Insights Section -->
          ${highlights.length > 0 ? `
            <div class="bg-white rounded-2xl shadow-lg p-8 mb-8 border-t-4 border-purple-500">
              <h3 class="heading-font text-2xl font-bold text-slate-900 mb-6">üí° Key Insights & Recommendations</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                ${highlights.map(h => `
                  <div class="flex gap-4 p-4 rounded-lg bg-purple-50 border border-purple-100">
                    <div class="w-2 h-2 rounded-full bg-purple-500 flex-shrink-0 mt-2"></div>
                    <p class="text-slate-700">${h}</p>
                  </div>
                `).join('')}
              </div>
            </div>
          ` : ''}
          
          <!-- Footer -->
          <div class="text-center py-8 border-t border-slate-200 text-slate-500 text-sm">
            <p>Report generated on ${new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}</p>
            <p class="mt-2">${brandName} ‚Ä¢ ${reportingPeriod}</p>
          </div>
        </div>
      `;
      
      document.getElementById('report-content').innerHTML = reportHTML;
      showReport();
      
      setTimeout(() => {
        initCharts();
      }, 100);
    }

    function initCharts() {
      const colors = ['#667eea', '#764ba2', '#f093fb', '#a78bfa', '#ec4899'];
      const { platforms, totalResults, totalImpressions, totalClicks, totalCost } = chartsData;
      
      const chartConfig = {
        maintainAspectRatio: false,
        responsive: true,
        plugins: {
          legend: {
            position: 'bottom',
            labels: {
              boxWidth: 12,
              padding: 15,
              font: { size: 12, weight: '500' },
              color: '#4b5563'
            }
          }
        }
      };
      
      // Results Chart
      if (document.getElementById('resultsChart')) {
        new Chart(document.getElementById('resultsChart'), {
          type: 'doughnut',
          data: {
            labels: platforms.map(p => p.name),
            datasets: [{
              data: platforms.map(p => p.results),
              backgroundColor: colors,
              borderColor: 'white',
              borderWidth: 2
            }]
          },
          options: chartConfig
        });
      }
      
      // Cost Chart
      if (document.getElementById('costChart')) {
        new Chart(document.getElementById('costChart'), {
          type: 'doughnut',
          data: {
            labels: platforms.map(p => p.name),
            datasets: [{
              data: platforms.map(p => p.cost),
              backgroundColor: colors,
              borderColor: 'white',
              borderWidth: 2
            }]
          },
          options: chartConfig
        });
      }
      
      // Impressions Chart
      if (document.getElementById('impressionsChart')) {
        new Chart(document.getElementById('impressionsChart'), {
          type: 'doughnut',
          data: {
            labels: platforms.map(p => p.name),
            datasets: [{
              data: platforms.map(p => p.impressions),
              backgroundColor: colors,
              borderColor: 'white',
              borderWidth: 2
            }]
          },
          options: chartConfig
        });
      }
      
      // Clicks Chart
      if (document.getElementById('clicksChart')) {
        new Chart(document.getElementById('clicksChart'), {
          type: 'doughnut',
          data: {
            labels: platforms.map(p => p.name),
            datasets: [{
              data: platforms.map(p => p.clicks),
              backgroundColor: colors,
              borderColor: 'white',
              borderWidth: 2
            }]
          },
          options: chartConfig
        });
      }
    }

    function savePDF() {
      const btn = document.getElementById('pdf-btn');
      const btnText = document.getElementById('pdf-text');
      const original = btnText.textContent;
      
      btn.disabled = true;
      btnText.textContent = 'Generating...';
      
      try {
        window.print();
        btnText.textContent = 'Ready to Print';
        setTimeout(() => {
          btn.disabled = false;
          btnText.textContent = original;
        }, 2000);
      } catch (err) {
        console.error('Print error:', err);
        btnText.textContent = 'Error - Try Again';
        setTimeout(() => {
          btn.disabled = false;
          btnText.textContent = original;
        }, 2000);
      }
    }
